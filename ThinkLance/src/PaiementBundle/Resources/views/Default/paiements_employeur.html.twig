    <div class="container">
        <div class="row">
            <div class="col">
                <div class="section_title_container text-center">
                    <h3 class="section_title">Mes paiements</h3>
                    <div class="section_subtitle"><br></div>
                </div>

                <!-- Table Affichage des paiements -->
                <center>
                    <div class="card col-xs-12 col-md-10 hidden-xs hidden-sm text-center right-container">
                        <div class="card-body">
                            <div>
                                <table class="table table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Date Heure</th>
                                        <th>Montant</th>
                                        {#<th>Devise</th>#}
                                        <th>Freelancer</th>
                                        <th>Nom Projet</th>
                                        <th>Action</th>
                                        <th>Facture</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for pay in paiements %}
                                        <tr>
                                            <td>{{ pay.idPaiement }}</td>
                                            <td>{{ pay.dateHeurePaiement | date('Y-m-d H:i:s') }}</td>
                                            <td>{{ pay.montant }}</td>
                                            {#<td>{{ pay.devise }}</td>#}
                                            <td>
                                                <a href="{{ path('user_details', {'id' : pay.freelancer.id }) }}">{{ pay.freelancer.username }}</a>
                                            </td>
                                            <td>
                                                <a href="{{ path('details_projet', {'id' : pay.Projet.idprojet}) }}">{{ pay.projet.titreProjet }}</a>
                                            </td>
                                            <td>
                                                {% set difference = date(pay.dateHeurePaiement).diff(date()) %}
                                                {% set leftDays = difference.days %}
                                                {% if  leftDays < 3 %}
                                                    <a href="{{ path('supprimer_paiement', {'id' : pay.idPaiement}) }}">
                                                        <button type="button" class="btn btn-warning"
                                                                data-toggle="tooltip" data-placement="top"
                                                                title="Annuler paiement">Rembour.
                                                        </button>
                                                    </a>
                                                {% else %}
                                                    <button type="button" class="btn btn-warning" disabled>Rembour.
                                                    </button>
                                                {% endif %}
                                            </td>
                                            <td><a target="_blank" href="{{ path('facture', {'id':pay.idPaiement}) }}">
                                                    <button type="button" class="btn btn-success" data-toggle="tooltip"
                                                            data-placement="top" title="Facture"><span class="fa fa-file"></span>
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </center>
                <!-- End Table Affichage des paiements -->
