<!DOCTYPE html>
<head>
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/bootstrap4/bootstrap.min.css') }}">
    <link href="{{ asset('plugins/font-awesome-4.7.0/css/font-awesome.min.css') }}" rel="stylesheet"
          type="text/css">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/OwlCarousel2-2.2.1/owl.carousel.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/OwlCarousel2-2.2.1/owl.theme.default.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/OwlCarousel2-2.2.1/animate.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/main_styles.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/responsive.css') }}">
    <title>{{ article.titre }}</title>
</head>
<header class="header">
    <!-- Header Content -->
    <div class="header_container" style="position: fixed;">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="header_content d-flex flex-row align-items-center justify-content-start">
                        <div class="logo_container">
                            <img src="{{ asset('images/thinklance2.png') }}" height="60" width="150">
                        </div>
                        <nav class="main_nav_contaner ml-auto">
                            <ul class="main_nav">
                                <li>
                                    <a href="{{ path('fos_user_profile_show') }}">{{ app.user.username | capitalize }}</a>
                                </li>
                                <li class="active"><a href="{{ path('auth_homepage') }}">Accueil</a></li>
                                <li class="active"><a href="{{ path('liste_paiements') }}">Paiements</a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">
                                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                    </a>
                                </li>
                            </ul>
                            {#<div class="search_button"><i class="fa fa-search" aria-hidden="true"></i></div>#}
                            <!-- Hamburger -->
                            <div class="hamburger menu_mm">
                                <i class="fa fa-bars menu_mm" aria-hidden="true"></i>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Header Content -->
</header>
<body>
<div class="team_background parallax-window" data-parallax="scroll"
     data-image-src="{{ asset('images/team_background.jpg') }}" data-speed="0.8"></div>

{% if article.photoArticle == null %}
    <div class="container"><br><br><br><br><br><br><br>
        <div class="card mb-3">
            <div class="card-body">
                <h3 class="card-title">{{ article.titre }}</h3>
                <p class="card-text">
                    <small class="text-muted">{{ article.dateHeure | date('Y-m-d H:i') }} ecrit par</small>
                    <a href="{{ path('user_details', {'id' : article.utilisateur.id }) }}"> {{ article.utilisateur | capitalize }}</a>
                    {% if article.type != null %}
                        <span class="badge badge-pill badge-primary">{{ article.type.nom }}</span>
                    {% else %}
                        <a href="{{ path('user_details', {'id' : article.utilisateur.id }) }}"> {{ article.utilisateur | capitalize }}</a>
                    {% endif %}
                </p>
                <p class="card-text">{{ article.texte }}</p>
            </div>
        </div>
    </div>
{% else %}
    <div class="container">
        <div class="card mb-3">
            <img class="card-img-top" src="{{ asset('uploads/articlesPhotos/' ~ article.photoArticle) }}" alt="...">
            <div class="card-body">
                <h3 class="card-title">{{ article.titre }}</h3>
                <p class="card-text">
                    <small class="text-muted">{{ article.dateHeure | date('Y-m-d H:i') }} ecrit par</small>
                    <a href="{{ path('user_details', {'id' : article.utilisateur.id }) }}"> {{ article.utilisateur | capitalize }}</a>
                </p>
                <p class="card-text">{{ article.texte }}</p>
            </div>
        </div>
    </div>
{% endif %}

</body>
