        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
            <li class="active">Icons</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Les réclamation</h1>
        </div>
    </div><!--/.row-->


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" id="show"> Toutes les réclamation effectuées par les utilisateurs </div>
                <div style="margin-left: 700px;">
                    <form style="width:400px" class="input-group mb-3" action="{{ path('index') }}" method="get">
                        <input class="form-control" name="filter" type="text" placeholder="Recherche par sujet de réclamation" >
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-outline-secondary">Rechercher</button>
                        </div>
                    </form>
                </div>
                <div class="panel-body">
                    {% for c in categ %}
                    <h3>{{c.nomC}}</h3>
                    <table border="2" class="table table-stripd">
                        <tr><td>Id</td>
                            <td>Sujet</td>
                            <td>Nom de l'utilisateur qui a ete reclame</td>
                            <td>Nom de l'utilisateur qui a effectuer la reclamation</td>

                            <td>Date</td>
                            <td>Message</td>
                            <td>Etat</td>
                            <td>Action</td>

                        </tr>
                        {% for r in rec %}
                            {% if r.categorie.nomC== c.nomC %}
                            <tr>

                                <td>{{ r.id}}</td>
                                <td>{{ r.sujet }}</td>

                               <td>{{ r.user.getUsername()}}</td>
                                <td>{{ r.admin.getUsername()}}</td>

                                <td>{{ r.datemc|date('Y-m-d') }}</td>

                                <td >{{r.message }}</td>
                                <td >{{r.etat }}</td>
                                <td><a class="btn btn-primary" href="{{ path('mail',{'id':r.id}) }}">Envoyer Email</a>

                                    <a class="btn btn-danger" href="{{ path('reclamation_supprimer',{'ref':r.id}) }}">  Supprimer</a>
                                    <a class="btn btn-secondary" href="{{ path('supp_user',{'i':r.user.id ,'id':r.id}) }}">Bannir</a></td>


                            </tr>
                        {% endif %}


                        {% endfor %}
                    </table>
                    {% endfor %}


                </div>
            </div>
        </div>
    </div>


