{% block content %}
    <h1>Ajouter un projet </h1> <br> <br>
    <div class="resumeadd-form">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-4">
                <span class="pf-title">Titre Projet</span>
                <div class="pf-field">
                    {{ form_widget(form.titreProjet) }}
                </div>
            </div>
            <div class="col-lg-4">
                <span class="pf-title">Nombre de jours</span>
                <div class="pf-field">
                    {{ form_widget(form.nbreJours) }}
                </div>
            </div>

            <div class="col-lg-4">
                <span class="pf-title">Nom Fichiers</span>
                <div class="pf-field">
                    {{ form_widget(form.nomFichiers) }}
                </div>
            </div>
            <div class="col-lg-4">
                <span class="pf-title">Prix</span>
                <div class="pf-field">
                    {{ form_widget(form.prix) }}
                </div>
            </div>
            <div class="col-lg-4">
                <span class="pf-title">Description</span>
                <div class="pf-field">
                    {{ form_widget(form.description) }}
                </div>
            </div>
            <div class="col-lg-4">
                <span class="pf-title">Fichier</span>
                <div class="pf-field">
                    {{ form_widget(form.file) }}
                </div>
            </div>
            <div class="col-lg-4">
                <span class="pf-title">Cat√©gorie</span>
                <div class="pf-field">
                    {{ form_widget(form.categorie) }}
                </div>
            </div>

            <div class="col-lg-4">
                <button type="submit">Enregistrer</button>
            </div>
        </div>

        </div>


        {{ form_end(form) }}
</div>
{% endblock %}
