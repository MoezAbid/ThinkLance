{% block content %}
    <center>


        <h1>Ajouter un projet </h1> <br> <br>
{{ form_start(form) }}
        <div class="login px-sm-4 mx-auto mw-100">
            <div class="form-group">
                {{ form_widget(form.titreProjet, {'attr': {'class': 'form-control', 'placeholder': 'Titre projet' }}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description' }}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.nbreJours, {'attr': {'class': 'form-control', 'placeholder': 'nombres de jours' ,'min':'1' }}) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'prix du projet' ,'min':'1'}}) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.nomFichiers, {'attr': {'class': 'form-control', 'placeholder': 'Nom du fichier' }}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.file, {'attr': {'class': 'form-control', 'placeholder': 'lien fichier' }}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.categorie, {'attr': {'class': 'form-control', 'placeholder': 'lien fichier' }}) }}
            </div>


            <button name="add" type="submit">Ajouter</button>
            {{ form_end(form) }}




        </div>
    </center>
{% endblock %}
